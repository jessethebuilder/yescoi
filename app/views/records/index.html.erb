<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Municipality</th>
      <th>Tax</th>
      <th>Owner</th>
      <th>Street number</th>
      <th>Street name</th>
      <th>Swis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.municipality %></td>
        <td><%= record.tax_id %></td>
        <td><%= record.owner %></td>
        <td><%= record.street_number %></td>
        <td><%= record.street_name %></td>
        <td><%= record.swis %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

